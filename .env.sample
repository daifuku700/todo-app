# Flask
FLASK_SECRET_KEY=replace-with-random-string
PORT=8000

# Azure Entra ID (App registration)
TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
CLIENT_ID=yyyyyyyy-yyyy-yyyy-yyyy-yyyyyyyyyyyy
CLIENT_SECRET=replace-with-client-secret

# OIDC
AUTHORITY=https://login.microsoftonline.com/${TENANT_ID}
REDIRECT_URI=http://your-vm-domain-or-ip/callback
POST_LOGOUT_REDIRECT_URI=http://your-vm-domain-or-ip/
OIDC_SCOPES=

# Azure SQL (ODBC Driver 18 利用)
# 例: mssql+pyodbc://USER:PASSWORD@your-sql-server.database.windows.net:1433/DBNAME?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no&Connection+Timeout=30
AZURE_SQL_CONNECTION_STRING=mssql+pyodbc://USER:PASSWORD@SERVERNAME.database.windows.net:1433/DBNAME?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no&Connection+Timeout=30
